<Window x:Class="ПишиСтирай.windows.WindowDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ПишиСтирай.windows"
        mc:Ignorable="d"
        Icon="/pictures/icon.ico"
        Title="OOO Пиши-Стирай" Height="150" Width="400">
    <Grid>
        <StackPanel Width="300" HorizontalAlignment="Center">
            <TextBlock Text="Выберите дату"/>
            <DatePicker Name="dpDate" FontSize="18" FontFamily="Comic Sans MS"/>
            <Button Name="btnSave" Content="Сохранить" Template="{StaticResource btn}" Click="btnSave_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
