<Window x:Class="ПишиСтирай.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ПишиСтирай"
        mc:Ignorable="d"
        Title="OOO Пиши-Стирай" Height="450" Width="800"
        Icon="pictures/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Image Source="pictures/logo.png" Width="100"/>
            <TextBlock Text="ООО Пиши-Стирай"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Frame Name="frmMain" NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
